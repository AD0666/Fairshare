# Server Configuration
PORT=5000
NODE_ENV=development

# Database Connection
# Replace with YOUR PostgreSQL username and password
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/fairshare?schema=public"

# JWT Secret (Generate a random string)
JWT_SECRET=change-this-to-a-random-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# CORS - Frontend URL
CLIENT_URL=http://localhost:3000

# File Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

